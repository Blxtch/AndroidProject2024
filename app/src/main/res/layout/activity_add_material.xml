<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background_login">

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="687dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="44dp">

        <EditText
            android:id="@+id/materialRefInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unique Reference" />

        <EditText
            android:id="@+id/materialNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand and model of the device" />

        <EditText
            android:id="@+id/materialLinkInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Merchant Link (optional)"
            />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:backgroundTint="@color/indigo"
            />

        <Button
            android:id="@+id/saveMaterialBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/Blue"
            android:text="Save Material" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>